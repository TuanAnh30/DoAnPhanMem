@model Admin.Models.KHACHHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h2 class="card-title">CHỈNH SỬA</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Khách Hàng</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaKH)
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    Họ Tên
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoTenKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    Ngày sinh
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Ngaysinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="mb-3">
                Đại Chỉ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    Số Điện Thoại
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DienThoaiKH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DienThoaiKH, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    Email
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    Tên Đăng Nhập
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 col-md-6">
                    Mật Khẩu
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row g-2">
                <div class="mb-3 col-md-6">
                    Giới Tính
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Gioitinh)
                            @Html.ValidationMessageFor(model => model.Gioitinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    Tình trạng
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Daduyet)
                            @Html.ValidationMessageFor(model => model.Daduyet, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-3 col-md-6">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Lưu</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="btn btn-primary">
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
