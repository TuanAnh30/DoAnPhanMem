@model Admin.Models.NHAXUATBAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}


<h2 class="card-title">THÊM MỚI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Nhà Xuất Bản</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 col-md-6">
                Tên Nhà Xuất Bản
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                Địa Chỉ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                Điện Thoại
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Tạo </button>
                </div>
            </div>
        </div>
    </div>
}
<div class="btn btn-primary">
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
