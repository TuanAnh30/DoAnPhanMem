@model IEnumerable<Admin.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>
                DANH SÁCH NHÀ XUẤT BẢN
            </h3>
        </div>
        <p class="btn btn-primary">
            @Html.ActionLink("Thêm ", "Create")
            <i class="fas fa-plus-circle"></i>
        </p>
        <div class="box box-primary">
            <div class="box-body">
                <table width="100%" class="table table-hover" id="dataTables-example">
                    <tr>
                        <th>
                            Mã
                        </th>
                        <th>
                            Tên Nhà Xuất Bản
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaNXB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenNXB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>
                            <td>
                                <p class="btn btn-outline-primary"> @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }) </p>
                                <p class="btn btn-outline-info"> @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNXB }) </p>
                                <p class="btn btn-outline-danger">  @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB }) </p>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>