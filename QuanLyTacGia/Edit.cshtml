@model Admin.Models.TACGIA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h2 class="page-title">CHỈNH SỬA</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">TÁC GIẢ</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTG)

            <div class="mb-3 col-md-6">
                Tên Tác Giả
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                Địa Chỉ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiachiTG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiachiTG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                Số Điện Thoại
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienthoaiTG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienthoaiTG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-primary"><i class="fas fa-save"></i> Lưu </button>
                </div>
            </div>
        </div>
    </div>

}
<div class="btn btn-primary">
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>
