@model Admin.Models.CHUDE

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h2 class="page-title">CHI TIẾT</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Chủ Đề @Html.DisplayFor(model => model.MaCD)</h4>
        <hr />
        <p class="card-text">Chủ Đề: @Html.DisplayFor(model => model.TenCD)</p>
    </div>
</div>
<div class="mb-3 col-md-6">
    <p class="btn btn-secondary">@Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaCD })</p>
    <p class="btn btn-primary">@Html.ActionLink("Trở lại danh sách", "Index")</p>
</div>
