@model Admin.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h2 class="card-title">CHỈNH SỬA</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Chủ Đề @Html.DisplayFor(model => model.MaCD)</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 col-md-6">
                Tên Chủ Đề
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenCD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenCD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 col-md-6">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu </button>
                </div>
            </div>
        </div>
    </div>
}

<div class="btn btn-primary">
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>

