@model IEnumerable<Admin.Models.SACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}
<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>
                DANH SÁCH SẢN PHẨM
            </h3>
        </div>
        <p class="btn btn-primary">
            @Html.ActionLink("Thêm ", "Create")
            <i class="fas fa-plus-circle"></i>
        </p>
        <div class="box box-primary">
            <table width="100%" class="table table-hover" id="dataTables-example">
                <tr>
                    <th>
                        Mã
                    </th>
                    <th>
                        Tên
                    </th>
                    <th>
                        Đơn vị
                    </th>
                    <th>
                        Đơn giá
                    </th>
                    <th>
                        Số lượng bán
                    </th>
                    <th>
                        Số lần xem
                    </th>
                    <th>
                        Chủ đề
                    </th>
                    <th>
                        Nhà xuất bản
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem =>item.Masach)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tensach)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Donvitinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dongia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Soluongban)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Solanxem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CHUDE.TenCD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NHAXUATBAN.TenNXB)
                        </td>
                        <td>
                            <p class="btn btn-outline-primary"> @Html.ActionLink("Sửa", "Edit", new { id = item.Masach }) </p>
                            <p class="btn btn-outline-info"> @Html.ActionLink("Chi Tiết", "Details", new { id = item.Masach }) </p>
                            <p class="btn btn-outline-danger">  @Html.ActionLink("Xóa", "Delete", new { id = item.Masach }) </p>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>